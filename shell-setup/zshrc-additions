# Things to add to your .zshrc file

# Set zsh theme
ZSH_THEME="agnoster"

# Set the default user
DEFAULT_USER=$(whoami)

# Uncomment the following line to enable command auto-correction.
ENABLE_CORRECTION="true"

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
plugins=(git lol ruby rails osx postgres zsh-syntax-highlighting)

# User configuration
export PATH="/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"
# export MANPATH="/usr/local/man:$MANPATH"

# You may need to manually set your language environment
export LANG="en_US.UTF-8"
export LC_COLLATE="en_US.UTF-8"
export LC_CTYPE="en_US.UTF-8"
export LC_MESSAGES="en_US.UTF-8"
export LC_MONETARY="en_US.UTF-8"
export LC_NUMERIC="en_US.UTF-8"
export LC_TIME="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"


# Preferred editor for local and remote sessions
export EDITOR='vim'

# Alias 'hub' to 'git'
eval "$(hub alias -s)"

# Docker Stuff
eval "$(docker-machine env default)"

# Git utils
alias 'git?'='git status -s'
alias clean_branches='git branch --merged master | grep -v master | xargs git branch -d'
alias gitjk="history 10 | tail -r | gitjk_cmd"

# Personal Aliases
alias greprr="grep --exclude-dir=log --exclude=tags --exclude-dir=temp --exclude-dir=public"

# Virtualcandy Configuration
source ~/bin/.virtualcandy/src/virtualcandy.zsh
VC_DEFAULT_VENV_NAME='.venv'
VC_DEFAULT_VENV_REQFILE='requirements.txt'
VC_AUTO_ACTIVATION=true
